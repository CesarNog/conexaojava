<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="EstiloTitulo">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="EstiloBotao">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/botao_customizado</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    
    <style name="EstiloLinhaDaLista">
        <item name="android:background">@drawable/gradiente_vertical_vermelho</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>
    
</resources>
